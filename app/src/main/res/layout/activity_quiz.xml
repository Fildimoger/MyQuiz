<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="#96fab3"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">


    <TextView
        android:id="@+id/txtTotalQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:text="Questions: 1/10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:text="MaxScore:120" />

    <TextView
        android:id="@+id/txtCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textColor="#0946AE"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:text="Correct: 0" />

    <TextView
        android:id="@+id/txtWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textColor="#7C25A4"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:text="Wrong: 0" />

        <TextView
            android:id="@+id/txtViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:text="00:30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:background="@drawable/buttons_background"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="My androind code is the best in town! Although I hate Java" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            >

            <RadioButton
                android:id="@+id/radiobutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons_background"
                android:layout_weight="1"
                android:text="RadioButton"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:freezesText="true"/>

            <RadioButton
                android:id="@+id/radiobutton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons_background"
                android:layout_weight="1"
                android:text="RadioButton"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:freezesText="true"/>

            <RadioButton
                android:id="@+id/radiobutton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons_background"
                android:layout_weight="1"
                android:text="RadioButton"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:freezesText="true"/>

            <RadioButton
                android:id="@+id/radiobutton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons_background"
                android:layout_weight="1"
                android:text="RadioButton"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:freezesText="true"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/confirm_button_background"
                android:text="Next"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>